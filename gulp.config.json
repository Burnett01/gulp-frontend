{
  "roots": {
    "src": "resources/assets",
    "dest": "public"
  },

  "tasks": {

    "scripts": {
      "roots": {
        "src": "scripts",
        "dest": "assets/scripts"
      },
      "glob": "/**/*.js",
      "deps": [],
      "plugins": {
        "webpack": {
          "commons": true,
          "overlay": false,
          "quiet": false,
          "entry": {
            "app": "./app.js"
          }
        }
      }
    },

    "styles": {
      "roots": {
        "src": "styles",
        "dest": "assets/styles"
      },
      "glob": "/**/*.scss",
      "deps": [],
      "plugins": {
        "sass": {
          "outputStyle": "expanded"
        },
        "autoprefixer": {
          "browsers": ["> 1%", "last 2 versions", "Firefox ESR"]
        }
      }
    },

    "images": {
      "roots": {
        "src": "images",
        "dest": "assets/images"
      },
      "glob": "/**/*",
      "deps": [],
      "plugins": {
        "imagemin": {
          "progressive": true,
          "interlaced": true,
          "svgoPlugins": [{"cleanupIDs": false}]
        }
      }
    },

    "fonts": {
      "roots": {
        "src": "fonts",
        "dest": "assets/fonts"
      },
      "glob": "/**/*.{eot,svg,ttf,woff,woff2}",
      "deps": [],
      "plugins": {}
    },

    "serve": {
      "deps": ["styles", "images", "fonts"],
      "plugins": {
        "browserSync": {
          "notify": false,
          "proxy": false,
          "port": 3000,
          "files": ["/**/*.html", "/**/*.php", "/**/*.txt"]
        }
      }
    },

    "watch": {
      "deps": [],
      "tasks": ["styles", "images", "fonts"]
    },

    "clean": {
      "deps": [],
      "tasks": ["scripts", "styles", "images", "fonts"]
    }

  }
}
